###############################################################################
# Dockerfile used to make gitlab.linphone.org:4567/bc/public/flexisip/bc-dev-rocky8:20220810_add_jsoncpp
###############################################################################

FROM rockylinux:8

MAINTAINER Anthony Gauchy <anthony.gauchy@belledonne-communications.com>

# Install common general tools
RUN dnf install -y sudo vim wget

# Configure additional repositories
RUN dnf install -y epel-release && \
        sudo dnf install -y dnf-plugins-core && \
        sudo dnf config-manager -y --set-enabled powertools && \
        dnf install -y http://repo.okay.com.mx/centos/8/x86_64/release/okay-release-1-5.el8.noarch.rpm

# Update
RUN sudo dnf makecache --refresh && dnf -y update

 # Install development tools
RUN sudo dnf -y install \
                   bzip2 \
                   ccache \
                   clang \
                   cmake \
                   c-ares-devel \
                   doxygen \
                   gcc \
                   gcc-c++ \
                   gdb \
                   git \
                   libasan \
                   libev-devel \
                   libubsan \
                   libuv-devel \
                   llvm \
                   make \
                   ninja-build \
                   python3 \
                   python3-pip \
                   rpm-build \
                   zlib-devel \
                 # Install all dependencies needed for Flexisip
                   openssl-devel \
                   boost-devel \
                   hiredis-devel \
                   jansson-devel \
                   libsqlite3x-devel \
                   libpq-devel \
                   mariadb-devel \
                   mariadb-server \
                   nghttp2 \
                   libnghttp2-devel \
                   protobuf-devel \
                   net-snmp-devel \
                   xerces-c-devel \
                   gsm-devel \
                   opus-devel \
                   mbedtls-devel \
                   speex-devel \
                   speexdsp-devel \
                   libxml2-devel \
                   protobuf-compiler \
                   redis \
                 # Dependencies of the B2BUA
                   mesa-libEGL-devel \
                   glew-devel \
                   libvpx-devel  \
                   jsoncpp-devel \
               &&  dnf -y clean all

# Install libnghttp2_asio
RUN ver=1.39.2 && srcdir=nghttp2-${ver} && srcpkg=${srcdir}.tar.gz && bindir=build && \
	wget https://github.com/nghttp2/nghttp2/releases/download/v${ver}/${srcpkg} && \
	tar -xf ${srcpkg} && \
	mkdir ${bindir} && cmake -S ${srcdir} -B ${bindir} -GNinja -DENABLE_ASIO_LIB=ON && \
	cmake --build ${bindir} --target install && \
	rm -rf ${srcpkg} ${srcdir} ${bindir}

# Configure user bc
RUN useradd -ms /bin/bash bc && \
    echo 'bc:cotcot' | chpasswd && \
    echo 'bc ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Switch to 'bc' user
USER bc
WORKDIR /home/bc

# Install python3 modules.
# This must be done as user 'bc' because python modules are installed in /usr/local/lib when pip is invoked
# as root, and rpmbuild prevents python from searching its modules in this prefix. Installing with user 'bc' puts
# the modules in /home/bc/.local/bin.
RUN python3 -m pip install --user pystache six
ENV PATH=$PATH:/home/bc/.local/bin

ENV PS1='\[\e[34m\]\u@bc-dev-rocky8>\[\e[0m\] '

# MYSQL DB for unit tests
COPY systemctl.py /usr/bin/systemctl
RUN sudo chmod a+x /usr/bin/systemctl

COPY mariadb-entrypoint.sh /home/bc/
RUN sudo chmod a+x /home/bc/mariadb-entrypoint.sh
