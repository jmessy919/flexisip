###############################################################################
# Dockerfile used to make gitlab.linphone.org:4567/bc/public/flexisip/bc-dev-ubuntu-22-04:20230529_disable_git_safe_directory_check
###############################################################################

FROM ubuntu:22.04

MAINTAINER Anthony Gauchy <anthony.gauchy@belledonne-communications.com>

  # Update
RUN apt-get -y update \
  # Install common tools
 && apt-get -y install \
	file \
	rsync \
	sudo \
	vim \
	wget \
	# Install development tools
	ccache \
	clang \
	cmake \
	doxygen \
	elfutils \
	g++ \
	gdb \
	git \
	graphviz \
	intltool \
	libtool \
	llvm \
	lsb-release \
	make \
	nasm \
	ninja-build \
	openssh-client \
	python3 \
	python3-pip \
	rpm \
	# Install all dependencies needed for linphone-sdk
	libasound2-dev \
	libavcodec-dev \
	libavutil-dev \
	libbsd-dev \
	libegl1-mesa-dev \
	libglew-dev \
	libgsm1-dev \
	libjansson-dev \
	libmariadb-dev \
	libmbedtls-dev \
	libopus-dev \
	libpq-dev \
	libpulse-dev \
	libspeex-dev \
	libspeexdsp-dev \
	libsqlite3-dev \
	libsrtp2-dev \
	libswscale-dev \
	libturbojpeg0-dev \
	libv4l-dev \
	libvpx-dev \
	libxerces-c-dev \
	libxml2-dev \
	libxv-dev \
	xsdcxx \
	yasm \
	# Install all dependencies needed for Flexisip
	libboost-dev \
	libboost-system-dev \
	libboost-thread-dev \
	libhiredis-dev \
	libjsoncpp-dev \
	libmariadb-dev-compat \
	libnghttp2-dev \
	libprotobuf-dev \
	libsnmp-dev \
	libssl-dev \
	protobuf-compiler \
	redis-server \
	# Dependencies of the tester
	mariadb-server \
  # Clean
 && apt-get -y autoremove \
 && apt-get -y clean

# Install libnghttp2_asio 1.43.0
COPY libnghttp2_asio_install.sh .
RUN ./libnghttp2_asio_install.sh 1.43.0 && rm libnghttp2_asio_install.sh

# Configure user bc
RUN useradd -ms /bin/bash bc && \
    echo 'bc:cotcot' | chpasswd && \
    echo 'bc ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Switch for 'bc' user
USER bc
WORKDIR /home/bc

# Install python3 modules.
# This must be done as 'bc' user because some python modules are installed into /usr/local/lib when pip is invoked
# as root, and rpmbuild prevent python from seaching its modules in this prefix. Using 'bc' user make the python
# modules to be installed into /home/bc/.local/bin.
RUN python3 -m pip install --user pystache six
ENV PATH=$PATH:/home/bc/.local/bin

# CVE-2022-24765, from git 2.35.2 onward
RUN git config --global --add safe.directory *
